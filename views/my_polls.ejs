<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('partials/_head') %>
  </head>

  <body>
    <header>
      <%- include('partials/_header') %>
    </header>

    <h1>My Polls</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Questions</th>
        </tr>
      </thead>
      <tbody>
        <% for(let poll of polls) { %>
          <tr>
            <td><%= poll.description %></td>
            <td>
              <form method="GET" action="/polls/<%= poll.sub_link_id %>/">
                <button type="submit" class="btn btn-outline-primary">View</button>
              </form>
            </td>
            <td> <form method="POST" action="/polls/<%= poll.sub_link_id %>/delete"><button type="submit" class="btn btn-outline-danger">Delete</button></form></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>

</html>
