<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('partials/_head') %>
  </head>

  <body>
    <div id="form-wrapper">
      <form action='/' method='POST' id="login-form">
        <div class='form-group'>
          <label for='exampleInputEmail1'>Email address</label>
          <input type='email' name='email' class='form-control-login' placeholder='Enter email'>
        </div>
        <div class='form-group'>
          <label for='exampleInputPassword1'>Password</label>
          <input type='password' name='password' class='form-control-login' placeholder='Password'>
        </div>
        <div class='d-flex justify-content-center'>
          <button type='submit' class='submit-button d-block m-3'>Login</button>
        </div>
      </form>
    </div>
  </body>

</html>